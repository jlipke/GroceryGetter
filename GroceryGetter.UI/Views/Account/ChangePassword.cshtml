@model GroceryGetter.UI.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_GGLayout.cshtml";
}

<h2>Change Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    

<div class="form-horizontal">
    <hr />

    <div class="col-md-10">
        <div class="text-danger">
            @ViewBag.Message
            <br />
            <br />
        </div>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" id="password">
            @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.newpass1, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" id="newpass1">
            @Html.PasswordFor(model => model.newpass1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.newpass1, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.newpass2, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" id="newpass2">
            @Html.PasswordFor(model => model.newpass2, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.newpass2, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary"/>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Settings", "Index")
</div>
