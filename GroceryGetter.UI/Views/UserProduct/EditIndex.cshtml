@model IEnumerable<GroceryGetter.BL.Models.UserProduct>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditIndex</title>
</head>
<body>

    <h2>Grocery List</h2>

    <p>
        @Html.ActionLink("Add Product", "Create")
    </p>
    <table class="user_products_table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InCart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductAisle)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InCart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductTitle)
                    @*@Html.ActionLink(item.ProductTitle, "Edit", "UserProduct")*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductAisle)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
