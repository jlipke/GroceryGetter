@model IEnumerable<GroceryGetter.BL.Models.UserProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_GGLayout.cshtml";
}

<h2>Grocery List</h2>


<table class="user_products_table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InCart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductAisle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.CheckBox("In Cart", item.InCart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductAisle)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<p>
    <input type="button" value="Add Product" class="btn btn-outline-success" onclick="@("window.location.href='" + @Url.Action("AddProducts", "UserProduct") + "'");" />
</p>
