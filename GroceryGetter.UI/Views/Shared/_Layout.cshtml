<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Grocery Getter</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Grocery Getter</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle Navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" runat="server" href="~/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" runat="server" href="~/Home/About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" runat="server" href="~/Home/Contact">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" runat="server" href="~/Product">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" runat="server" href="~/User/Login">Login</a>
                </li>

            </ul>
        </div>
    </div>

    <div class="banner">
        <img id="logo" src="~/Images/LogoPlaceholder.png" />
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now - Grocery Getter&copy;  </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
